        "opacity": 1,
        "always_on_top": true,
        "title": "Logitech_Assistant"
    },
    "recognition": {
        "threshold": 0.5,
        "interval": 0.01,
        "max_retries": 3
    },
    "label": {
        "font_size": 14,
        "font_family": "Microsoft YaHei",
        "background_color": "rgba(0, 0, 0, 150)",
